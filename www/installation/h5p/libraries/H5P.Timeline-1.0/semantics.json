              "regexp": {
                "pattern": "^-?\\d{1,}(,(1[012]|[0]?[1-9])(,([12][0-9]|3[01]|[0]?[1-9]))?)?$"
              }
            },
            {
              "name": "headline",
              "type": "text",
              "label": "Headline",
              "description": "Era headline"
            },
            {
              "name": "text",
              "type": "text",
              "label": "Text",
              "widget": "html",
              "optional": true,
              "description": "Era body",
              "tags":
              [
                "strong",
